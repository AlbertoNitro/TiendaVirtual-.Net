@model IEnumerable<Cliente>

@{
    ViewBag.Title = "Index";
}

<h2>Clientes:</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellidos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Direccion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Login)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>Acciones</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Apellidos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Direccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Login)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", "Clientes", new { id=item.Id }, new { @class = "btn botonAmarillo" }) 
            @Html.ActionLink("Detalles", "Details", "Clientes", new { id=item.Id }, new { @class = "btn botonAzul" }) 
            @Html.ActionLink("Eliminar", "Delete", "Clientes", new { id=item.Id }, new { @class = "btn botonRojo" })
        </td>
    </tr>
}

</table>
<span class="mensajitoError">*Solo se deben eliminar clientes que no hayan realizado ningun pedido, de lo contrario, se generara un error por violar la integridad referencial de la BD.</span>
